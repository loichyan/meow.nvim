{
  "name": "spark.nvim",
  "version": "0.0.0",
  "license": "MIT OR Apache-2.0",
  "main": "lua/spark.d.ts",
  "types": "lua/spark",
  "exports": {
    ".": {
      "types": "./lua/spark.d.ts",
      "default": "./lua/spark"
    },
    "./*": {
      "types": "./lua/spark/*.d.ts",
      "default": "./lua/spark/*"
    },
    "./types": {
      "types": "./src/global.d.ts"
    }
  },
  "files": [
    "lua/*",
    "src/global.d.ts"
  ],
  "scripts": {
    "build": "tstl",
    "dev": "tstl --watch",
    "fmt": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "2.7",
    "typescript": "4.8",
    "typescript-to-lua": "1.10"
  },
  "dependencies": {
    "lua-types": "2.13"
  }
}
